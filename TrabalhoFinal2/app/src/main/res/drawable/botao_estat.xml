<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Style for "caminho_42" -->
    <!-- Add this snippet to layer-list xml in drawable. -->
    <item android:width="360dp" android:height="80dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorsoftblack" />
            <corners
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp"/>
            <item name="android:shadowColor">#33000000</item>
            <!-- TextView shadow offsets do not respect scale. -->
            <item name="android:shadowDx">0</item>
            <item name="android:shadowDy">1</item>
        </shape>
    </item>
</layer-list>