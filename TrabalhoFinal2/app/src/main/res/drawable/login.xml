<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android"> 
<!-- Style for "caminho_99" -->
<!-- Add this snippet to layer-list xml in drawable. -->
<item android:width="364dp" android:height="36dp">
  <shape android:shape="rectangle">
    <solid android:color="#ffffffff" />
    <corners
        android:bottomRightRadius="5dp"
        android:bottomLeftRadius="5dp"
        android:topLeftRadius="5dp"
        android:topRightRadius="5dp"/>
    <item android:name="android:shadowColor">#33000000</item>
    <!-- TextView shadow offsets do not respect scale. -->
    <item android:name="android:shadowDx">0</item>
    <item android:name="android:shadowDy">1</item>
  </shape>
</item>
</layer-list>