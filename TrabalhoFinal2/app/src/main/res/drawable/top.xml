<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android"> 
<!-- Style for "surface" -->
<!-- Add this snippet to layer-list xml in drawable. -->
<item android:width="450dp" android:height="80dp">
  <shape android:shape="rectangle">
    <solid android:color="#ff585858" />
    <item name="android:shadowColor">#33000000</item>
    <!-- TextView shadow offsets do not respect scale. -->
    <item name="android:shadowDx">0</item>
    <item name="android:shadowDy">1</item>
  </shape>
</item>
</layer-list>